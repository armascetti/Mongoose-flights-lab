<%- include ('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheet/destinations/new.css" />
  <%- include ('../partials/nav') %>
    <main>
      <h1>
        <%= title %>
      </h1>
      <p> Please make sure your Destination is not in the dropdown already</p>
      <select>
        <% destinations.forEach(function(destination){ %>
          <option>
            <%= destination.airport %>
          </option>
          <% }) %>
      </select>
      </p>
      <form id="add-destination-form" action="/destinations" method="POST">
        <label for="destination-input">Destination Airport: </label>
        <input type="text" name="aiport" id="airport">
        <button type="submit">Add Destination </button>
      </form>
      </form>
    </main>
